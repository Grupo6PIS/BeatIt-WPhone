<UserControl x:Class="BeatIt_.AppCode.CustomControls.ChallenesListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="210" d:DesignWidth="210">
    
    <Grid x:Name="LayoutRoot">
        <Rectangle Height="200" HorizontalAlignment="Center" Name="backgroundRec" Stroke="Black" StrokeThickness="1" VerticalAlignment="Center" Width="200" Margin="15,10,0,0" />
        <Image Height="160" HorizontalAlignment="Center" Margin="15,10,0,0" Name="image" Stretch="Fill" VerticalAlignment="Center" Width="160" />
        <HyperlinkButton Height="200" HorizontalAlignment="Left" Margin="15,10,0,0" Name="linkBtn" VerticalAlignment="Top" Width="200" />
    </Grid>
</UserControl>
